{
  "name": "popcorn-slide",
  "version": "0.4.0",
  "description": "A lib to create a slide images with canvas.",
  "main": "lib/index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "build:umd": "./node_modules/.bin/webpack --output-filename popcorn-slide.umd.js",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename popcorn-slide.umd.min.js -p",
    "build:all": "npm run build && npm run build:umd && npm run build:umd:min",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls",
    "prepublish": "npm run build:all"
  },
  "files": [
    "dist",
    "lib"
  ],
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dennerrondinely/popcorn-slide.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library",
    "Canvas",
    "slide"
  ],
  "author": "DÃªnner Rondinely <denner.rondinely@gmail.com> (https://dennerrondinely.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dennerrondinely/popcorn-slide/issues"
  },
  "homepage": "https://github.com/dennerrondinely/popcorn-slide#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^3.5.0",
    "coveralls": "^2.13.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^0.11.9",
    "mocha": "^10.2.0",
    "node-fetch": "^2.6.7",
    "nyc": "^10.3.2",
    "prettier": "^1.19.1",
    "rimraf": "^2.7.1",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.5.0",
    "webpack": "^2.7.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "canvas": "^2.6.1",
    "jsdom": "^16.2.1"
  }
}
